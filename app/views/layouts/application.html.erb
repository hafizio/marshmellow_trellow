<!DOCTYPE html>
<html>
<head>
  <title>Marshmellow</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <% if flash[:notices] %>
      <% flash[:notices].each do |notice| %>
        <p class="notice"><%= notice %></p>
      <% end %>
    <% end %>
    <% if flash[:alerts] %>
      <% flash[:alerts].each do |alert| %>
        <p class="alert"><%= alert %></p>
      <% end %>
    <% end %>
  </header>
<%= yield %>

</body>
</html>
